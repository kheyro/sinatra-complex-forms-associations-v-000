<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">

  <br></br>


  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="owner[name]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner.include?(owner) %>><%= owner.name %></input>
  <% end %>


  <br><br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner_name"></input>

  <br></br>

  <input type="submit" value="Update Pet">
</form>
